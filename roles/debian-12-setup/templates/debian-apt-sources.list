deb https://deb.debian.org/debian {{ ansible_distribution_release }} main contrib non-free-firmware
deb-src https://deb.debian.org/debian {{ ansible_distribution_release }} main contrib non-free-firmware

deb https://security.debian.org/debian-security {{ ansible_distribution_release }}-security main contrib non-free-firmware
deb-src https://security.debian.org/debian-security {{ ansible_distribution_release }}-security main contrib non-free-firmware

# {{ ansible_distribution_release }}-updates, to get updates before a point release is made;
# see https://www.debian.org/doc/manuals/debian-reference/ch02.en.html#_updates_and_backports
deb https://deb.debian.org/debian {{ ansible_distribution_release }}-updates main contrib non-free-firmware
deb-src https://deb.debian.org/debian {{ ansible_distribution_release }}-updates main contrib non-free-firmware

# {{ ansible_distribution_release }}-backports, previously on backports.debian.org
deb https://deb.debian.org/debian {{ ansible_distribution_release }}-backports main contrib non-free-firmware
deb-src https://deb.debian.org/debian {{ ansible_distribution_release }}-backports main contrib non-free-firmware